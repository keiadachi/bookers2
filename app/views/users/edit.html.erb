<% if  @user.errors.any? %>
  <div>
    <ul style="color: red">
     <li style= "list-style:none ">
        <%= pluralize(@user.errors.count, "error") %>
        prohibited this book from being saved:</li>
        <% @user.errors.full_messages.each do |message| %>
     <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<main>
<p id="notice"></p>
<div class="container">
  <div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>User info</h2>

<%= form_with model:@user, local:true do |f| %>
<div class="form-group">
  <label>Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"Name"%>
</div>

  <%#ここに画像投稿機能%>
<div class="form-group">
  <h4>Image</h4>
  <%= f.attachment_field :profile_image %>
  <%#カラム名をidぬかして記述 %>
</div>

<div class="form-group">
  <%= f.text_field :introduction, autofocus: true, id:"inputName", placeholder:"Intoroduction"%>
</div>

  <%= f.submit "Update User", class:"btn btn-secondary" %>
<% end %>