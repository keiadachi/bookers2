<h1>booksページ</h1>


 <table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Body</th>
        </tr>
    </thead>


    <tbody>
       <% @books.each do |book| %>
    　　<tr>
    　　 <td><%= attachment_image_tag book.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: 'no_image.jpg', size:'50x50', class: "attachment user profile_image fallback" %> </td>
    　　  <%#確認画像の表示 %>
         <td> <%= book.title %> </td>
         <td> <%= book.body %> </td>
         <td><%= link_to "Show",book_path(book.id) %></td>
         <td><%= link_to "Edit",edit_book_path(book.id) %></td>
         <td>
         <%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
    　　 </td>
    　　</tr>
    　　<% end %>
    </tbody>
</table>